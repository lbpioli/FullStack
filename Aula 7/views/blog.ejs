<!-- views/blog.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blog - Desenvolvimento Web</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>Blog</h1>
    <a href="/cadastrar_post" class="btn">Criar novo post</a>
  </header>

  <main>
    <section class="posts">
      <h2>Posts</h2>
      <% posts.forEach(post => { %>
        <div class="post">
          <h3><%= post.titulo %></h3>
          <p><%= post.resumo %></p>>
        </div>
      <% }) %>
    </section>
  </main>

  <footer>
    <p>--------------------</p>
  </footer>
</body>
</html>